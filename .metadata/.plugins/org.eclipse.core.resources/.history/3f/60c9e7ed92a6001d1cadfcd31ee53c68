package test.socket;

import java.io.IOException;
import java.io.InputStream;
import java.io.OutputStream;
import java.net.ServerSocket;
import java.net.Socket;
import java.net.SocketAddress;

public class TestServerSocket {

	public static void main(String[] args) throws IOException {
		int port =5000;
		ServerSocket server = new ServerSocket(port);
		
		server:	//label
		while(true)
		{
			System.out.println("finish run server port=" + port);
			Socket service = server.accept();
			SocketAddress remote = service.getRemoteSocketAddress();
			System.out.println("client connected...[" + remote + "]");
			InputStream in = service.getInputStream();
			OutputStream out = service.getOutputStream();
			
			byte[] buffer = new byte[1024];
			in.read(buffer);
			String request = new String(buffer);
			System.out.println(request);
			if (request.trim().equals("1"))
				break server;//label break
			String response = "hi";
			out.write(response.getBytes());
			
			in.close();
			out.close();
			service.close();
		}
		server.close();
	}

}
