	}
	

	@Override
	public int getPay()
	{
		int pay = super.getPay()/12;
		for(Employee em : emList)
		{
			if (em != null)
			{
				pay += em.getPay()/10;
			}
		}
//		for(int i = 0; i < 5; ++i)
//		{
//			if (emList[i] != null)
//			{
//				pay += emList[i].getPay()/10;
//				System.out.println("emcheck");
//			}
//		}
		return pay;
	}
	public String getDept() {
		return dept;
	}
	public Employee[] getEmList() {
		return emList;
	}
	public void setDept(String dept) {
		this.dept = dept;
	}
	public void setEmList(Employee[] emList) {
this.emList = new Employee[5];
		
		for(int j = 0; j < 5; ++j)
			this.emList[j] = null;
		
		int i = 0;
		for(Employee em : emList)
		{
			if (em != null && em instanceof Engineer && ((Engineer)em).getDept().equals(dept) )
			{
				this.emList[i++] = em;
			}
		}
	}
}
