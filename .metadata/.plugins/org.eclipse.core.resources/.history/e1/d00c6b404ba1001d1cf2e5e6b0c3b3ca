package test.employee;

import java.util.Arrays;

public class Manager extends Employee{
	private String dept;
	private Employee[] emList;
	
	/**
	 * @param no
	 * @param name
	 * @param phone
	 * @param pay
	 * @param dept
	 * @param emList
	 */
	public Manager(String no, String name, String phone, int pay, String dept, Employee[] emList) {
		super(no, name, phone, pay);
		this.dept = dept;
		this.emList = emList;
	}
	@Override
	public String toString() {
		return getName() + "님의 급여 명세서\n23년 1월 금 " + getPay() + "만원";
	}
	public Manager(String no, String name, String phone, String dept, Employee[] emList) {
		super(no, name, phone, 10000);
		this.dept = dept;
		this.emList = new Employee[5];
		for(int j = 0; j < 5; ++j)
			this.emList[j] = null;
		int i = 0;
		for(Employee em : emList)
		{
//			System.out.println("em for");
			if (em != null && em instanceof Engineer && ((Engineer)em).getDept().equals(dept) )
			{
				this.emList[i++] = em;
//				System.out.println("add em");
			}
		}
//		System.out.println("add em");
	}
	

	@Override
	public int getPay()
	{
		int pay = super.getPay()/12;
		// err infinite loop for( Employee em : emList)
		for(Employee em : emList)
		{
			if (em != null)
			{
				pay += em.getPay()/10;
//				System.out.println("emcheck");
			}
		}
//		for(int i = 0; i < 5; ++i)
//		{
//			if (emList[i] != null)
//			{
//				pay += emList[i].getPay()/10;
//				System.out.println("emcheck");
//			}
//		}
		return pay;
	}
}
